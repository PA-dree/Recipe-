<Window x:Class="RecipeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="IngredientFilterTextBox" Text="Enter ingredient name" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="FoodGroupFilterTextBox" Text="Enter food group" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="MaxCaloriesFilterTextBox" Text="Enter max calories" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <Button Content="Apply Filter" Click="ApplyFilter_Click" Margin="5"/>
            <Button Content="Clear Filter" Click="ClearFilter_Click" Margin="5"/>
            <Button Content="Add Recipe" Click="AddRecipeWindow.xaml.cs" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>





