<Window x:Class="RecipeProject.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="RecipeNameTextBox" Text="Recipe Name" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="IngredientNameTextBox" Text="Ingredient Name" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="QuantityTextBox" Text="Quantity" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="UnitTextBox" Text="Unit of Measurement" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="CaloriesTextBox" Text="Calories" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="FoodGroupTextBox" Text="Food Group" Margin="5" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="5"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
